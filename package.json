{
    "name": "SoundOnFire",
    "_comment": "1. Generate new Version, 2. Use Version to modify pubspec.yaml, 3. Create Tag with Version and VersionCode, 4. Use Release notes for Github Release and in Update changelog",
    "release": {
        "branches": [
            "master"
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/changelog",
            [
                "@semantic-release/exec",
                {
                    "prepareCmd": "./.github/scripts/updateVersion.sh ${nextRelease.version}"
                }
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "pubspec.yaml"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "devDependencies": {
        "@semantic-release/changelog": "^5.0.1",
        "@semantic-release/exec": "^5.0.0",
        "@semantic-release/git": "^9.0.0"
    }
}